{
  "manifest_version": 3,
  "name": "ColorfulGPT",
  "version": "1.0",
  "icons": {
    "128": "logo/icon128.png",
    "16": "logo/icon16.png",
    "48": "logo/icon48.png"
  },
  "description": "Aplica folhas de estilo diferentes no site do chatGPT",
  "permissions": [ "scripting", "tabs", "storage" ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["foreground.js"]
    }
  ],
  "host_permissions": [ "https://chat.openai.com/*" ]



}

